<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.guruFragment.ProfileFragmentGuru">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="svprofilGuru">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/text">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_top_profile"
                android:scaleType="centerCrop" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvProfileGuru"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/transparent_background"
                android:foregroundGravity="center"
                android:layout_marginTop="-80dp"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transparent_background"
                    android:scaleType="centerCrop"
                    android:src="@drawable/foto_profil_default" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_nama_guru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="Nama Guru"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_semibold"/>
            <TextView
                android:id="@+id/tv_nip_guru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="nip"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_semibold"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="15dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="nomor hp"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tv_nomor_hp_guru"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" - "
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="20sp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="25dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp">

                    <Button
                        android:id="@+id/btn_ubah_password_guru"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ubah Password"
                        android:textAllCaps="false"
                        android:fontFamily="@font/poppins_semibold"
                        android:background="@drawable/bg_btn"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:layout_marginHorizontal="20dp" />

                    <Button
                        android:id="@+id/btn_kebijakan_aplikasi_guru"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kebijakan Aplikasi"
                        android:textAllCaps="false"
                        android:fontFamily="@font/poppins_semibold"
                        android:background="@drawable/bg_btn"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:layout_marginHorizontal="20dp" />

                    <Button
                        android:id="@+id/btn_faq_guru"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="FAQ"
                        android:textAllCaps="false"
                        android:fontFamily="@font/poppins_semibold"
                        android:background="@drawable/bg_btn"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:layout_marginHorizontal="20dp" />

                    <Button
                        android:id="@+id/btn_logout_guru"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:textAllCaps="false"
                        android:fontFamily="@font/poppins_semibold"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:strokeColor="@color/button"
                        app:cornerRadius="10dp"
                        app:strokeWidth="2dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/button"
                        android:layout_marginHorizontal="20dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </ScrollView>


</FrameLayout>