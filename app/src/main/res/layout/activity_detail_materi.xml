<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.DetailMateriActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/button">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/btnKembali"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_back"
                android:layout_marginRight="30dp"/>
            <TextView
                android:id="@+id/tv_judul_detail_materi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Detail Materi"
                android:textColor="@color/white"
                android:textAlignment="textStart"
                android:textSize="20sp" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:scrollbarStyle="insideOverlay">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <ImageView
               android:layout_width="150dp"
               android:layout_height="150dp"
               android:layout_marginTop="20dp"
               android:layout_gravity="center"
               android:src="@drawable/icon_materi"/>

           <TextView
               android:id="@+id/tv_judul_materi"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Judul Materi"
               android:gravity="center"
               android:textSize="20sp"
               android:fontFamily="@font/poppins_semibold"
               android:maxLines="3"/>

           <TextView
               android:id="@+id/tv_keterangan_materi_detail"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="10dp"
               android:text="ini keterangan materi"
               android:fontFamily="@font/poppins"
               android:textSize="18sp"/>

           <Button
               android:id="@+id/btn_download_materi"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Download Materi"
               android:fontFamily="@font/poppins"
               style="@style/Widget.Material3.Button.OutlinedButton"
               app:strokeColor= "@color/button"
               app:strokeWidth = "2dp"
               app:cornerRadius = "10dp"
               android:layout_marginHorizontal="30dp"/>
       </LinearLayout>
   </ScrollView>





</LinearLayout>