<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.guru.LoginActivityGuru">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Login Guru"
            android:textAlignment="center"
            android:textColor="@color/container"
            android:textSize="30sp"/>

        <EditText
            android:id="@+id/et_nip_guru"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_et_login"
            android:hint="masukkan NIP" />

        <EditText
            android:id="@+id/et_password_guru"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_et_login"
            android:drawableRight="@drawable/ic_visibility"
            android:drawableTint="@color/button"
            android:hint="masukkan Kata Sandi"
            android:inputType="textPassword"
            />


        <TextView
            android:id="@+id/tv_login_murid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="login dengan murid"
            android:gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/button"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_medium"/>


        <Button
            android:id="@+id/btn_login_guru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Login"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="80dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            android:background="@drawable/bg_btn"/>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>